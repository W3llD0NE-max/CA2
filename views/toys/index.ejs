<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Our Toys</h2>
        <a href="/dashboard" class="btn btn-outline-primary">‚Üê Back to Dashboard</a>
    </div>
 
    <form action="/toys/search" method="GET" class="mb-4">
        <div class="row">
            <div class="col-md-8">
                <input type="text" name="q" class="form-control" placeholder="Search by name or description">
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </form>
    
    <div class="row">
        <% toys.forEach(toy => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <% if (toy.Image && toy.Image.trim() !== '') { %>
                        <img src="/uploads/<%= toy.Image %>" class="card-img-top" alt="<%= toy.ProductName %>" style="height: 200px; object-fit: cover;">
                    <% } else { %>
                        <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                            <span class="text-muted">No Image Available</span>
                        </div>
                    <% } %>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= toy.ProductName %></h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            $<%= parseFloat(toy.Price).toFixed(2) %> | Qty: <%= toy.Quantity %>
                        </h6>
                        <p class="card-text flex-grow-1"><%= toy.Description %></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    
    <% if (toys.length === 0) { %>
        <div class="text-center mt-5">
            <h4>No toys found</h4>
            <p class="text-muted">Try adjusting your search criteria or browse all toys.</p>
            <a href="/toys" class="btn btn-primary">View All Toys</a>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>