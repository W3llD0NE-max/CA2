<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Our Toys</h2>
        <% if (user && user.role === 'admin') { %>
            <a href="/toys/new" class="btn btn-success">Add New Toy</a>
        <% } %>
    </div>
 
    <form action="/toys/search" method="GET" class="mb-4">
        <div class="row">
            <div class="col-md-8">
                <input type="text" name="q" class="form-control" placeholder="Search by name or description">
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </form>
    
    <div class="row">
        <% toys.forEach(toy => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= toy.ProductName %></h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            $<%= parseFloat(toy.Price).toFixed(2) %> | Qty: <%= toy.Quantity %>
                        </h6>
                        <p class="card-text"><%= toy.Description %></p>
                        
                        <% if (user && user.role === 'admin') { %>
                            <div class="d-flex justify-content-between">
                                <a href="/toys/<%= toy.ProductID %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                <form action="/toys/<%= toy.ProductID %>/delete" method="POST">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer') %>