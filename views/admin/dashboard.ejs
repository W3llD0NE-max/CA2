<%- include('../partials/header') %>

<div class="container mt-4">
    <h2>Admin Dashboard</h2>
    
    <div class="row">
        <div class="col-md-6">
            <h3>Users</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        
        <div class="col-md-6">
            <h3>All Toys</h3>
            <div class="mb-3">
                <a href="/toys/new" class="btn btn-success btn-sm">Add New Toy</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% toys.forEach(toy => { %>
                        <tr>
                            <td><%= toy.ProductName %></td>
                            <td>$<%= parseFloat(toy.Price).toFixed(2) %></td>
                            <td><%= toy.Quantity %></td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/toys/<%= toy.ProductID %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                    <form action="/toys/<%= toy.ProductID %>/delete" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this toy?')">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>