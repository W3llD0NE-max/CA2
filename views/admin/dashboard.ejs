<%- include('../partials/header') %>

<div class="container my-5">
    <h2 class="mb-4 text-center">Admin Dashboard</h2>

    <div class="row g-4">
        <!-- Users Section -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Users</h4>
                </div>
                <div class="card-body">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Email</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.id %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.role %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Toys Section -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">All Toys</h4>
                    <a href="/toys/new" class="btn btn-light btn-sm">+ Add Toy</a>
                </div>
                <div class="card-body">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% toys.forEach(toy => { %>
                                <tr>
                                    <td><%= toy.ProductName %></td>
                                    <td>$<%= parseFloat(toy.Price).toFixed(2) %></td>
                                    <td><%= toy.Quantity %></td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/toys/<%= toy.ProductID %>/edit" class="btn btn-warning">Edit</a>
                                            <form action="/toys/<%= toy.ProductID %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this toy?')" style="display:inline;">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
