<%- include('../partials/header') %>

<div class="container mt-4">
    <h2>Admin Dashboard</h2>
    
    <div class="row">
        <div class="col-md-6">
            <h3>Users</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        
        <div class="col-md-6">
            <h3>All Toys</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    <% toys.forEach(toy => { %>
                        <tr>
                            <td><%= toy.ProductName %></td>
                            <td>$<%= parseFloat(toy.Price).toFixed(2) %></td>
                            <td><%= toy.Quantity %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>